   glPopMatrix();

   glPushMatrix();
    glTranslatef(xesfera,yesfera,0.0);
    Bolinha bolinha;
    bolinha.Desenha();
   glPopMatrix();

   glPushMatrix();
    glScalef(0.7,0.7,1.0);
   	glRotatef(-20.0,0.0,0.0,1.0);
    glTranslatef(-1.7, 1.3, 0.0);
    glRotatef(pal1,0.0,0.0,1.0);
    Palheta paletaE;
